<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".GraveActivity">

    <include layout="@layout/header_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="16sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/burialMethod_btn"
                    android:layout_width="match_parent"
                    android:layout_height="75sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/mBurialMethodAdd"
                            android:layout_width="match_parent"
                            android:layout_height="44sp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/button_add" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical"
                        android:paddingLeft="16sp"
                        android:text="@string/mem_burial_method"
                        android:textAllCaps="true"
                        android:textColor="@color/md_white_1000"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iconBurialMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:src="@drawable/arrow_down" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/md_white_1000" />


                <LinearLayout
                    android:id="@+id/editBurialMethodView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_grey"
                    android:orientation="horizontal"
                    android:paddingLeft="32sp"
                    android:paddingRight="16sp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical"
                        android:paddingTop="16sp"
                        android:paddingBottom="16sp">


                        <EditText
                            android:id="@+id/editBurialMethod"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:background="@drawable/edit_text_background"
                            android:hint="@string/mem_burial_method"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="16sp" />

                        <EditText
                            android:id="@+id/editBurialDetails"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/edit_text_background"
                            android:drawableRight="@drawable/calandar"
                            android:hint="@string/mem_details"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingLeft="16sp"
                            android:paddingRight="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:paddingLeft="16sp">

                        <ImageView
                            android:id="@+id/addBurialMethodBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/button_add" />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/burialMethodView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/graveDetails_btn"
                    android:layout_width="match_parent"
                    android:layout_height="75sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16sp">

                    <LinearLayout
                        android:layout_width=