<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:orientation="vertical"
    tools:context=".WriteActivity">

  <include layout="@layout/header_menu" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:background="@color/colorBg"
      android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16sp">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical"
          android:padding="5sp">

        <ImageView
            android:id="@+id/typeBtn"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:src="@drawable/button_type" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:gravity="center"
            android:text="@string/menu_type"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:textStyle="bold" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="5sp">

        <ImageView
            android:id="@+id/videoBtn"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_marginLeft="48sp"
            android:layout_marginRight="48sp"
            android:src="@drawable/button_video" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:gravity="center"
            android:text="@string/menu_video"
            android:textAlignment="center"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:textStyle="bold" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="5sp">

        <ImageView
            android:id="@+id/audioBtn"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:src="@drawable/button_audio" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:gravity="center"
            android:text="@string/menu_audio"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:textStyle="bold" />
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="7"
      android:orientation="vertical">

    <!-- Type View -->
    <!--Type Root View-->
    <LinearLayout
        android:id="@+id/typeRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="8"
          android:orientation="vertical"

          >
        <!-- Type Write View-->

        <LinearLayout
            android:id="@+id/typeWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBg"
            android:orientation="vertical"
            android:paddingLeft="32sp"
            android:paddingTop="16sp"
            android:paddingRight="32sp"
            android:visibility="visible">

          <EditText
              android:id="@+id/edit_type_title"
              android:layout_width="match_parent"
              android:layout_height="50sp"
              android:background="@drawable/message_edit_text"
              android:hint="@string/mem_type_title"
              android:paddingLeft="16sp"
              android:paddingRight="16sp" />

          <EditText
              android:id="@+id/edit_type_content"
              android:layout_width="match_parent"
              android:layout_height="160sp"
              android:layout_marginTop="16sp"
              android:background="@drawable/message_edit_text"
              android:gravity="top|left"
              android:hint="@string/mem_type_content"
              android:inputType="textMultiLine"
              android:paddingLeft="16sp"
              android:paddingTop="16sp"
              android:paddingRight="16sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/editSingleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="32sp"
            android:paddingTop="16sp"
            android:paddingRight="32sp"
            android:paddingBottom="8sp"
            android:visibility="gone">

          <EditText
              android:id="@+id/editSingleTitle"
              android:layout_width="match_parent"
              android:layout_height="50sp"
              android:background="@drawable/write_view_text_bg"
              android:gravity="center_vertical"
              android:paddingLeft="16sp"
              android:text="@string/mem_type_content"
              a